DateTime.Now.AddHours(-1) },
new MovementDto { ProductName = "Keyboard Logitech", MovementType = MovementType.In, Quantity = 25, Date =
DateTime.Now.AddMinutes(-30) },
new MovementDto { ProductName = "Mouse Wireless", MovementType = MovementType.Out, Quantity = 8, Date =
